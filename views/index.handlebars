<div class="container">

    <div class="jumbotron">
        <h1> Let's Eat Some Burgers</h1>
        <p>Make the Burgers. Then Eat the Burgers</p>
        <h2>Make Your Own Burger</h2>
        <panel>
            <form class="burger-form">
                <div class="form-group">
                    <label for="newBurger">Order A Fresh Burger</label>
                    <input type="text" id="newBurger" name="burger">
                    <button type="submit" class="btn btn-danger" id="addBurger">
                        <span class="fas fa-hamburger"></span>
                     </button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftSide"><strong>Order Your Burger</strong>
                    <p>Send Your Order To The Chef When Ready!</p>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fas fa-usd"></span></button>
                        
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Burger is Ready</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong>{{this.id}}- {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fas fa-trash"></span></button>
                        
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>